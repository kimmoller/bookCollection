{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES2021",
        "lib": [
            "ES2016"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}